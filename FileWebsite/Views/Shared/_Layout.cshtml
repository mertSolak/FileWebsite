
@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>Starter Template - Materialize</title>
    <script src="@Url.Content("~/scripts/jquery-1.10.2.js")"></script>
    <!--  CSS-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="@Url.Content("~/Content/MyTemplate/css/materialize.css")" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="@Url.Content("~/Content/MyTemplate/css/style.css")" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="@Url.Content("~/Content/dropzone.css")" rel="stylesheet" />
</head>
<body>
    <ul id="dropdown1" class="dropdown-content">
        <li><a href="#!">one</a></li>
        <li><a href="#!">two</a></li>
        <li class="divider"></li>
        <li><a href="#!">three</a></li>
    </ul>
    <nav class="light-blue lighten-1" role="navigation">
        <div class="nav-wrapper container">
            <a href="#!" class="brand-logo">Logo</a>
            @if (string.IsNullOrEmpty(Session["username"] as string))
            {
                <ul class="right hide-on-med-and-down">
                    <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                </ul>
            }
            else {
                <ul class="right hide-on-med-and-down">
                    <li>@Html.ActionLink("" + Session["username"], "Index", "Home")</li>
                    <li>@Html.ActionLink("Log Out", "LogOut", "Account")</li>
                </ul>
            }
        </div>
    </nav>


    @RenderBody()



    

    <!--  Scripts-->

    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src=@Url.Content("~/Content/MyTemplate/js/materialize.js")></script>
    <script src=@Url.Content("~/Content/MyTemplate/js/init.js")></script>
    <script src=@Url.Content("~/Content/MyTemplate/js/materialize.min.js")></script>
    <script src="@Url.Content("~/scripts/dropzone.js")" type="text/javascript"></script>

</body>
</html>
